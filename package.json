{
  "name": "vscode-beet",
  "displayName": "Beet",
  "description": "Support for beet projects",
  "version": "0.0.10",
  "author": "Oran9eUtan",
  "publisher": "mcbeet",
  "icon": "res/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcbeet/vscode-beet.git"
  },
  "homepage": "https://github.com/mcbeet/vscode-beet",
  "bugs": {
    "url": "https://github.com/mcbeet/vscode-beet/issues"
  },
  "license": "MIT",
  "main": "./out/extension.js",
  "activationEvents": [
    "workspaceContains:**/beet*.json"
  ],
  "categories": [
    "Linters"
  ],
  "keywords": [
    "minecraft",
    "beet",
    "datapack",
    "resourcepack"
  ],
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "beet*.json",
        "url": "./res/schemas/beet_pipeline.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "release:dry": "semantic-release --dry-run"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "semantic-release": "^17.4.2",
    "semantic-release-vsce": "^3.3.0",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "engines": {
    "vscode": "^1.54.0"
  }
}
