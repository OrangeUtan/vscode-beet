{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Beet project configuration",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "author": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },

        "directory": {
            "type": "string"
        },
        "extend": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "output": {
            "type": "string"
        },
        "ignore": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "whitelist": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },

        "require": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "templates": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "data_pack": {
            "$ref": "./pack_config.json"
        },
        "resource_pack": {
            "$ref": "./pack_config.json"
        },
        "pipeline": {
            "type": "array",
            "items": {
                "anyOf": [
                    {"type": "string"},
                    {"$ref": "./project_config.json"}
                ]
            }
        },
        "meta": {
            "type": "object",
            "properties": {
                "function_header": {
                    "$ref": "./contrib/function_header.json"
                },
                "lantern_load": {
                    "$ref": "./contrib/lantern_load.json"
                },
                "render": {
                    "$ref": "./contrib/render.json"
                },
                "sandstone": {
                    "$ref": "./contrib/sandstone.json"
                }
            }
        }
    }
}