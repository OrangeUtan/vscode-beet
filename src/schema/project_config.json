{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Beet project configuration",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name of the project",
            "type": "string"
        },
        "description": {
            "title": "Description of the project. Will be included in pack.mcmeta",
            "type": "string"
        },
        "author": {
            "title": "Author of the project. Will be included in pack.mcmeta",
            "type": "string"
        },
        "version": {
            "title": "Current project version. Will be included in pack.mcmeta",
            "type": "string"
        },

        "directory": {
            "title": "Root directory of the project",
            "type": "string"
        },
        "extend": {
            "title": "List of project configurations files to inherit from",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "output": {
            "title": "Output directory. Generated files will be put here",
            "type": "string"
        },
        "ignore": {
            "title": "List of paths whose modification should be ignored by the watch command",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "whitelist": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },

        "require": {
            "title": "List of plugins running before the bootstrap plugin",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "templates": {
            "title": "List of directory containing Jinja templates",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "data_pack": {
            "title": "Datapack configuration",
            "$ref": "./pack_config.json"
        },
        "resource_pack": {
            "title": "Resourcepack configuration",
            "$ref": "./pack_config.json"
        },
        "pipeline": {
            "title": "The plugin pipeline",
            "type": "array",
            "items": {
                "anyOf": [
                    {"type": "string"},
                    {"$ref": "./project_config.json"}
                ]
            }
        },
        "meta": {
            "title": "Storage for during the build process. Also contains plugin configurations",
            "type": "object",
            "properties": {
                "function_header": {
                    "$ref": "./contrib/function_header.json"
                },
                "lantern_load": {
                    "$ref": "./contrib/lantern_load.json"
                },
                "render": {
                    "$ref": "./contrib/render.json"
                },
                "sandstone": {
                    "$ref": "./contrib/sandstone.json"
                },
                "babelbox": {
                    "$ref": "./contrib/babelbox.json"
                }
            }
        }
    }
}