{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "pack_format": {
            "type": "integer",
            "minimum": 0
        },
        "zipped": {
            "type": "boolean"
        },
        "load": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "render": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        }
    }
}