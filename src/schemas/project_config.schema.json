{
    "$id": "https://github.com/OrangeUtan/vscode-beet/blob/main/src/schemas/project_config.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Beet project configuration",
    "type": "object",
    "properties": {
        "name": {
            "title": "Project name",
            "type": "string"
        },
        "description": {
            "title": "Project description",
            "description": "Will be included in pack.mcmeta",
            "type": "string"
        },
        "author": {
            "title": "Project author",
            "description": "Will be included in pack.mcmeta",
            "type": "string"
        },
        "version": {
            "title": "Project version",
            "description": "Will be included in pack.mcmeta",
            "type": "string"
        },

        "directory": {
            "title": "Root directory of the project",
            "type": "string"
        },
        "extend": {
            "title": "List of project configurations files to inherit from",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "output": {
            "title": "Output directory",
            "directory": "Generated files will be put here",
            "type": "string"
        },
        "ignore": {
            "title": "List of paths whose modification should be ignored by the watch command",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "whitelist": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },

        "require": {
            "title": "List of plugins running before the bootstrap plugin",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "templates": {
            "title": "List of directories containing rendering templates",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "data_pack": {
            "title": "Datapack configuration",
            "$ref": "#/definitions/pack_config"
        },
        "resource_pack": {
            "title": "Resourcepack configuration",
            "$ref": "#/definitions/pack_config"
        },
        "pipeline": {
            "title": "The plugin pipeline",
            "type": "array",
            "items": {
                "anyOf": [
                    {"type": "string"},
                    {"$ref": "#"}
                ]
            }
        },
        "meta": {
            "title": "Storage for during the build process. Also contains plugin configurations",
            "type": "object",
            "properties": {
                "function_header": {
                    "title": "Plugin that adds a header to functions automatically",
                    "$ref": "#/definitions/contrib_function_header"
                },
                "lantern_load": {
                    "title": "Plugin that implements Lantern Load runtime dependencies",
                    "$ref": "#/definitions/contrib_lantern_load"
                },
                "render": {
                    "title": "Plugin that invokes the built-in template renderer",
                    "$ref": "#/definitions/contrib_render"
                },
                "sandstone": {
                    "title": "Plugin that builds a sandstone project",
                    "$ref": "#/definitions/contrib_sandstone"
                },
                "babelbox": {
                    "title": "Plugin that loads translations from csv files",
                    "$ref": "#/definitions/contrib_babelbox"
                }
            }
        }
    },
    "definitions": {
        "pack_config": {
            "type": "object",
            "properties": {
                "name": {
                    "title": "Name of the pack",
                    "description": "Overwrites project name",
                    "type": "string"
                },
                "description": {
                    "title": "Description of the pack",
                    "description": "Overwrites project description",
                    "type": "string"
                },
                "pack_format": {
                    "title": "Pack version",
                    "default": 6,
                    "type": "integer",
                    "minimum": 0
                },
                "zipped": {
                    "title": "Wether the pack should be zipped",
                    "type": "boolean"
                },
                "load": {
                    "title": "Load and merge existing packs",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "render": {
                    "title": "Groups of files that will be processed with templates",
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "contrib_function_header": {
            "type": "object",
            "properties": {
                "match": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "template": {
                    "type": "string",
                    "pattern": ".*\\.mcfunction"
                }
            }
        },
        "contrib_lantern_load": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "dependencies": {
                    "type": "object"
                }
            }
        },
        "contrib_render": {
            "type": "object",
            "properties": {
                "resource_pack": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "data_pack": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "contrib_sandstone": {
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                }
            }
        },
        "contrib_babelbox": {
            "type": "object",
            "properties": {
                "load": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "filename_prefix": {
                    "type": "boolean"
                },
                "dialect": {
                    "type": "string"
                }
            }
        }
    }
}