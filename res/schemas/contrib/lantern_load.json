{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "id": {
      "description": "Lantern Load project id. Defaults to the project name",
      "type": "string"
    },
    "version": {
      "description": "Lantern Load version. Defaults to the project version",
      "type": "string"
    },
    "dependencies": {
      "description": "Project dependencies",
      "type": "object",
      "additionalProperties": {
        "anyOf": [{ "type": "string" }, { "type": "number" }]
      }
    }
  }
}
