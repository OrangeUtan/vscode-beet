{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Beet project config",
  "type": "object",
  "properties": {
    "name": {
      "title": "Project name",
      "type": "string"
    },
    "description": {
      "title": "Project description",
      "description": "Will be included in pack.mcmeta",
      "type": "string"
    },
    "author": {
      "title": "Project author",
      "description": "Will be included in pack.mcmeta",
      "type": "string"
    },
    "version": {
      "title": "Project version",
      "description": "Will be included in pack.mcmeta",
      "type": "string"
    },
    "directory": {
      "title": "Root directory of the project",
      "type": "string"
    },
    "extend": {
      "title": "Extend from other config files",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "output": {
      "title": "Output directory",
      "type": "string"
    },
    "ignore": {
      "title": "Files that shouldn't trigger a rebuild in watch mode",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "whitelist": {
      "title": "Restrict the plugins that can be required into the pipeline",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "require": {
      "title": "Plugins affecting the environment",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "templates": {
      "title": "Template directories",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "data_pack": {
      "title": "Data pack configuration",
      "$ref": "#/definitions/pack_config"
    },
    "resource_pack": {
      "title": "Resource pack configuration",
      "$ref": "#/definitions/pack_config"
    },
    "pipeline": {
      "title": "The plugin pipeline",
      "type": "array",
      "items": {
        "anyOf": [{ "type": "string" }, { "$ref": "#" }]
      }
    },
    "meta": {
      "title": "Context metadata and plugin configuration",
      "type": "object",
      "properties": {
        "function_header": {
          "title": "Plugin that adds a header to functions automatically",
          "$ref": "contrib/function_header.json"
        },
        "lantern_load": {
          "title": "Plugin that implements Lantern Load runtime dependencies",
          "$ref": "contrib/lantern_load.json"
        },
        "render": {
          "title": "Plugin that invokes the built-in template renderer",
          "$ref": "contrib/render.json"
        },
        "sandstone": {
          "title": "Plugin that builds a sandstone project",
          "$ref": "contrib/sandstone.json"
        },
        "babelbox": {
          "title": "Plugin that loads translations from csv files",
          "$ref": "contrib/babelbox.json"
        },
        "lectern": {
          "title": "Plugin that loads markdown and text files",
          "$ref": "lectern.json"
        }
      }
    }
  },
  "definitions": {
    "pack_config": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Name of the pack",
          "description": "Overwrites project name",
          "type": "string"
        },
        "description": {
          "title": "Description of the pack",
          "description": "Overwrites project description",
          "type": "string"
        },
        "pack_format": {
          "title": "Pack version",
          "default": 6,
          "type": "integer",
          "minimum": 0
        },
        "zipped": {
          "title": "Wether the pack should be zipped",
          "type": "boolean"
        },
        "load": {
          "title": "Load and merge existing packs",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "render": {
          "title": "Process pack contents with the template renderer",
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
